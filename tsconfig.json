{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "#cmd-classes/*": ["./src/classes/*"],
      "#utils/*": ["./src/utils/*"],
      "#database": ["./src/database.js"],
      "#pagination": ["./src/pagination/pagination.js"],
      "#config/*": ["./config/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./build/**/*"]
}